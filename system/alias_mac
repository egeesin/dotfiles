alias man="man -P less"

alias macdefaults="vim ~/.dotfiles/macos/defaults.sh"
alias macdock="vim ~/.dotfiles/macos/dock.sh"

alias tetris="tetris --nomenu"

# List all application downloaded from Mac App Store
alias maslist="find /Applications -path '*Contents/_MASReceipt/receipt' -maxdepth 4 -print |\sed 's#.app/Contents/_MASReceipt/receipt#.app#g; s#/Applications/##'"

alias showbattery="pmset -g batt | egrep '([0-9]+\%).*' -o --colour=auto | cut -f1 -d';'"
alias showresolution="system_profiler SPDisplaysDataType | grep Resolution"
alias showcore="sysctl -n machdep.cpu.brand_string"

# Package Manager Shortcuts

alias cask="brew cask"
alias caski="brew cask install"
alias caskr="brew cask uninstall --force"

alias brewr="brew uninstall" 
alias portr="sudo port -fp uninstall"
alias pipr="pip uninstall" 
alias pipup "pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs pip install -U"

alias gg="$GIT_GUI"

# GUI Executables
alias vivaldi="/Applications/Vivaldi.app/Contents/MacOS/Vivaldi"
alias chrome='/Applications/Google\ Chrome\ Canary.app/Contents/MacOS/Google\ Chrome\ Canary'
alias subl="/Applications/Sublime\ Text.app/Contents/MacOS/Sublime\ Text"

alias readlink="greadlink"


# Flush DNS
alias flushdns="dscacheutil -flushcache && killall -HUP mDNSResponder"

# Start screen saver
alias afk="/System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app/Contents/MacOS/ScreenSaverEngine"

# Log off
alias logoff="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Quick-Look preview files from the command line
alias ql="qlmanage -p &>/dev/null"

# Show/hide desktop icons
alias deskshow="defaults write com.apple.finder CreateDesktop -bool true && killfinder"
alias deskhide="defaults write com.apple.finder CreateDesktop -bool false && killfinder"

# Clean up LaunchServices to remove duplicates in the "Open With" menu
alias cleanupls="/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user && killall Finder"

# Empty trash on mounted volumes and main HDD, and clear system logs
# alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

alias killfinder="killall Finder"
alias killdock="killall Dock"
alias killmenubar="killall SystemUIServer NotificationCenter"
alias killos="killfinder && killdock && killmenubar"

## Kill all the tabs in Chrome/Vivaldi to free up memory
alias vivaldikill="ps ux | grep '[V]ivaldi Helper --type=renderer' | grep -v extension-process | tr -s ' ' | cut -d ' ' -f2 | xargs kill"

[[ -f ~/.extra/secret/imessage-alias ]] && source ~/.extra/secret/imessage-alias

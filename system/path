# Warning: prepend-path, is-executable etc. commands described in .function file. This file must not sourced before .function!

is-executable getconf && PATH=$(`command -v getconf` PATH)

# Prepend new items to path (if directory exists)
prepend-path "/bin"
prepend-path "/usr/bin"
prepend-path "/usr/local/bin"
prepend-path "/usr/local/sbin"
prepend-path "$DOTFILES_DIR/bin"
prepend-path "$HOME/bin"
prepend-path "/sbin"
prepend-path "/usr/sbin"
is-executable go && export GOPATH="$HOME/go"
prepend-path "$GOROOT/bin"
prepend-path "$GOPATH/bin"

# Remove duplicates (preserving prepended items) -  Source: http://unix.stackexchange.com/a/40755
PATH=`echo -n $PATH | awk -v RS=: '{ if (!arr[$0]++) {printf("%s%s",!ln++?"":":",$0)}}'`

export PATH
